.results
	width 100%
	position relative

	&--white
		background #fff

	&__settings
		position absolute
		top 30px
		right 30px
		svg
			width 25px
			height 25px
			fill #2d3e50

.result-options
	position absolute
	top 50px
	right 50px
	z-index 1
	background #fff
	box-shadow 0 0 1px 1px #dfdfdf
	max-width 360px
	display none
	&__header
		padding 30px
		border-bottom 1px solid #dfdfdf
		.title
			font-weight bold
			font-size 16px
		.subtitle
			margin-top 10px
			color lighten(#242424, 30%)
	&__content
		padding 30px
		label
			display block