.vacancy
	width 750px
	position relative
	&--white
		background #fff

	&__description
		padding 25px 0
		margin-right 50px
		flex 1 1 75%
		.title
			font-size 18px
			color #242424

	&__company
		padding 25px 0
		flex 1 1 25%
		.title
			font-size 18px
			color #242424

	&__info
		flex 0 1 60%

	&__autorization
		margin-left 80px
		flex 0 1 40%
		position relative

	&__line
		position absolute
		display inline-block
		top 30px
		left -40px
		transform translateX(-50%)
		height 260px
		vertical-align middle
		color #ccc
		&:after
			position absolute
			display block
			content ""
			height 100%
			width 1px
			top 0
			left 50%
			background #ccc
		.text
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)
			background #fff
			z-index 1

	&__left-col
	&__right-col
		flex 0 0 calc(50% - 15px)

