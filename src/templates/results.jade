extends base

block title
	| Результаты опросов

block content
	.container.container--centered
		.block.results.results--white.reset-flex
			.block__title Результаты опросов на должность "%Название вакансии%"
			a(href=).results__settings
				include elements/svg/settings
			.line
			.block__paddings
				table.table.tablesorter
					thead
						tr
							th Избранные
							th Имя
							th Фамилия
							th Вопрос № 1
							th Вопрос № 2
							th Вопрос № 3
							th
								| Редактировать/
								br
								|Детально
							th
								| Детально
								br
								| Удалить
					tbody
						tr
							td 1
							td Пантелеймон
							td Христорождственский
							td
								a(href="")
									+lipsum(3, "words")
							td
								a(href="")
									+lipsum(1, "words")
							td
								a(href="")
									+lipsum(4, "words")
								td.table__edit
									a(href="" alt="Редактировать")
										include elements/svg/edit
									a(href="" alt="Удалить")
										include elements/svg/settings
								td.table__edit
									a(href="" alt="Редактировать")
										include elements/svg/settings
									a(href="" alt="Удалить")
										include elements/svg/remove
